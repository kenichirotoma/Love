<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.HomeFragment">
    <LinearLayout
        android:id="@+id/adBox"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:gravity="bottom"
        android:orientation="vertical"
        android:paddingLeft="24dp"
        android:paddingTop="24dp"
        android:paddingRight="24dp"
        app:layout_constraintTop_toBottomOf="@id/headMenu">
        <view
            android:id="@+id/banner"
            class="androidx.appcompat.widget.AppCompatImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/test_blue" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/BtnBox"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foregroundGravity="right"
        android:orientation="vertical"
        android:paddingLeft="24dp"
        android:paddingTop="140dp"
        android:paddingRight="24dp">
        <FrameLayout
            android:id="@+id/massageBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:foregroundGravity="top|center"
            android:orientation="horizontal">
            <Button
                android:id="@+id/msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_border"
                android:text="@string/msg"
                android:textColor="#FFFFFF"
                app:backgroundTint="@color/green_btn" />
            <Button
                android:id="@+id/msgBadge"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:layout_weight="2"
                android:background="@drawable/new_product"
                app:backgroundTint="@color/yellow"
                app:iconSize="8px" />
        </FrameLayout>
        <FrameLayout
            android:id="@+id/footstempsFrame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginBottom="24dp"
            android:foregroundGravity="top|center"
            android:orientation="horizontal">
            <Button
                android:id="@+id/footstemps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_border"
                android:text="@string/footsteps"
                android:textColor="#FFFFFF"
                app:backgroundTint="@color/green_btn" />
            <Button
                android:id="@+id/footstempsBadge"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:layout_weight="2"
                android:background="@drawable/new_product"
                app:backgroundTint="@color/yellow"
                android:textColor="@color/white"
                app:iconSize="8px" />
        </FrameLayout>
        <Button
            android:id="@+id/recommend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_border"
            android:text="@string/recommendApp"
            android:textColor="#FFFFFF"
            app:backgroundTint="@color/recommend" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/bnrBox"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="340dp"
        android:gravity="bottom"
        android:orientation="vertical"
        android:paddingLeft="24dp"
        android:paddingTop="24dp"
        android:paddingRight="24dp"
        app:layout_constraintTop_toBottomOf="@id/BtnBox">
        <view
            android:id="@+id/adBanner"
            class="androidx.appcompat.widget.AppCompatImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/test_blue" />
    </LinearLayout>
</FrameLayout>